<config>
    <modules>
        <Ado_Guestcookies>
            <version>1.0.0</version>
        </Ado_Guestcookies>
    </modules>
    <global>
        <blocks>
            <checkout>
                <rewrite>
                    <!-- Rewrite parts of checkout page to use existing address where available -->
                    <onepage_billing>Ado_Guestcookies_Block_Onepage_Billing</onepage_billing>
                    <onepage_shipping>Ado_Guestcookies_Block_Onepage_Shipping</onepage_shipping>
                </rewrite>
            </checkout>
            <guestcookies>
                <class>Ado_Guestcookies_Block</class>
            </guestcookies>
        </blocks>
        <helpers>
            <guestcookies>
                <class>Ado_Guestcookies_Helper</class>
            </guestcookies>
        </helpers>
        <models>
            <guestcookies>
                <class>Ado_Guestcookies_Model</class>
                <resourceModel>guestcookies_resource</resourceModel>
            </guestcookies>
            <guestcookies_resource>
                <class>Ado_Guestcookies_Model_Resource</class>
                <entities>
                	<quote>
                		<table>guestcookies_quote</table>
                	</quote>
                </entities>
            </guestcookies_resource>
        </models>
        <resources>
        	<guestcookies_setup>
        		<setup>
        			<module>Ado_Guestcookies</module>
        		</setup>
        	</guestcookies_setup>
        	<guestcookies_read>
        		<connection>
        			<use>core_read</use>
        		</connection>
        	</guestcookies_read>
        	<cookie_write>
        		<connection>
        			<use>core_write</use>
        		</connection>
        	</cookie_write>
        </resources>
    </global>

    <frontend>
    	<events>
    		<controller_action_predispatch>
    			<observers>
		    		<!-- Earliest chance to swap cart for returning guest. -->
		    		<!-- controller_front_init_* is earlier but session is not ready. -->
    				<guestcookies_quote>
    					<class>guestcookies/observer</class>
    					<method>readCartCookie</method>
    					<type>singleton</type>
    				</guestcookies_quote>
    				<guestcookies_viewed>
    					<class>guestcookies/observer</class>
    					<method>readViewedCookie</method>
    					<type>singleton</type>
    				</guestcookies_viewed>
    				<guestcookies_compare>
    					<class>guestcookies/observer</class>
    					<method>readCompareCookie</method>
    					<type>singleton</type>
    				</guestcookies_compare>
    			</observers>
    		</controller_action_predispatch>
    		<!-- Last opportunity to write headers. Session might have changed before this. -->
    		<controller_front_send_response_before>
    			<observers>
    				<guestcookies_quote>
    					<class>guestcookies/observer</class>
    					<method>writeCartCookie</method>
    					<type>singleton</type>
    				</guestcookies_quote>
    				<guestcookies_viewed>
    					<class>guestcookies/observer</class>
    					<method>writeViewedCookie</method>
    					<type>singleton</type>
    				</guestcookies_viewed>
    				<guestcookies_compare>
    					<class>guestcookies/observer</class>
    					<method>writeCompareCookie</method>
    					<type>singleton</type>
    				</guestcookies_compare>
    			</observers>
    		</controller_front_send_response_before>
    	</events>
		<layout>
			<updates>
				<guestcookies module="Ado_Guestcookies">
					<file>guestcookies.xml</file>
				</guestcookies>
			</updates>
		</layout>
		<routers>
			<guestcookies>
				<use>standard</use>
				<args>
					<module>Ado_Guestcookies</module>
					<frontName>guest</frontName>
				</args>
			</guestcookies>
		</routers>
    </frontend>


    <default>
    	<web>
    		<guestcookies>
    			<!-- 10 Years -->
    			<cookie_lifetime>315576000</cookie_lifetime>
				<quote>1</quote>
    			<quote_name>cart</quote_name>
    			<compare_name>compare</compare_name>
    			<viewed_name>viewed</viewed_name>
    		</guestcookies>
    	</web>
    </default>
    <adminhtml>
    	<translate>
    		<modules>
    			<Ado_Guestcookies>
    				<files>
    					<default>Ado_Guestcookies.csv</default>
    				</files>
    			</Ado_Guestcookies>
    		</modules>
    	</translate>
    </adminhtml>
</config>
