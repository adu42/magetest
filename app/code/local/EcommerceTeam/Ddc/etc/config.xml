<config>
    <modules>
        <EcommerceTeam_Ddc>
            <version>2.0</version>
        </EcommerceTeam_Ddc>
    </modules>
    <global>
		<helpers>
			<ecommerceteam_ddc><class>EcommerceTeam_Ddc_Helper</class></ecommerceteam_ddc>
		</helpers>
    	<blocks>
	        <ecommerceteam_ddc><class>EcommerceTeam_Ddc_Block</class></ecommerceteam_ddc>
	       <sales>
				<rewrite>
            	    <order_totals>EcommerceTeam_Ddc_Block_Sales_Order_Totals</order_totals>
				</rewrite>
            </sales>
            <checkout>
				<rewrite><cart_totals>EcommerceTeam_Ddc_Block_Checkout_Cart_Totals</cart_totals></rewrite>
            </checkout>
	        <adminhtml>
            	<rewrite>
					<sales_order_totals>EcommerceTeam_Ddc_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
					<sales_order_invoice_totals>EcommerceTeam_Ddc_Block_Adminhtml_Sales_Order_Invoice_Totals</sales_order_invoice_totals>
					<sales_order_creditmemo_totals>EcommerceTeam_Ddc_Block_Adminhtml_Sales_Order_Creditmemo_Totals</sales_order_creditmemo_totals>
            		<sales_order_view_info>EcommerceTeam_Ddc_Block_Adminhtml_Sales_Order_View_Info</sales_order_view_info>
            	</rewrite>
            </adminhtml>
	    </blocks>
	    <models>
            <ecommerceteam_ddc>
                <class>EcommerceTeam_Ddc_Model</class>
                <resourceModel>ecommerceteam_ddc_mysql4</resourceModel>
            </ecommerceteam_ddc>
            <ecommerceteam_ddc_mysql4>
		        <class>EcommerceTeam_Ddc_Model_Resource_Mysql4</class>
		        <entities>
		            <order><table>sales_ddc_order</table></order>
		            <quote><table>sales_ddc_quote</table></quote>
		        </entities>
		    </ecommerceteam_ddc_mysql4>
            <sales>
                <rewrite>
                    <quote_address_total_shipping>EcommerceTeam_Ddc_Model_Sales_Quote_Address_Total_Shipping</quote_address_total_shipping>
                </rewrite>
            </sales>
		</models>
        <resources>
            <ecommerceteam_ddc_setup>
                <setup>
                    <module>EcommerceTeam_Ddc</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ecommerceteam_ddc_setup>   
            <ecommerceteam_ddc_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ecommerceteam_ddc_write>
            <ecommerceteam_ddc_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ecommerceteam_ddc_read>
		</resources>
		<fieldsets>
            <sales_convert_quote><is_mobile><to_order>*</to_order></is_mobile></sales_convert_quote>
    		<sales_convert_quote_address>
                <delivery_fee_label><to_order>*</to_order></delivery_fee_label>
    			<delivery_fee_amount><to_order>*</to_order></delivery_fee_amount>
    			<base_delivery_fee_amount><to_order>*</to_order></base_delivery_fee_amount>
    		</sales_convert_quote_address>
    	</fieldsets>
    	<events>
            <!--
    		<sales_order_load_after>
            	<observers>
                    <ecommerceteam_ddc_order_load>
                        <type>singleton</type>
                        <class>EcommerceTeam_Ddc_Model_Observer</class>
                        <method>loadOrderData</method>
                    </ecommerceteam_ddc_order_load>
                </observers>
            </sales_order_load_after>
            -->
            <paypal_prepare_line_items>
                <observers>
                    <ecommerceteam_ddc_deliveryfee>
                        <type>singleton</type>
                        <class>EcommerceTeam_Ddc_Model_Observer</class>
                        <method>updatePaypalTotal</method>
                    </ecommerceteam_ddc_deliveryfee>
                </observers>
            </paypal_prepare_line_items>
            <sales_quote_load_after>
            	<observers>
                    <ecommerceteam_ddc_quote_load>
                        <type>singleton</type>
                        <class>EcommerceTeam_Ddc_Model_Observer</class>
                        <method>loadQuoteData</method>
                    </ecommerceteam_ddc_quote_load>
                </observers>
            </sales_quote_load_after>
      <!--      <sales_order_save_after>
            	<observers>
                    <ecommerceteam_ddc_order_save>
                        <type>singleton</type>
                        <class>EcommerceTeam_Ddc_Model_Observer</class>
                        <method>saveOrderData</method>
                    </ecommerceteam_ddc_order_save>
                </observers>
            </sales_order_save_after>
            -->
            <sales_quote_save_after>
            	<observers>
                    <ecommerceteam_ddc_quote_save>
                        <type>singleton</type>
                        <class>EcommerceTeam_Ddc_Model_Observer</class>
                        <method>saveQuoteData</method>
                    </ecommerceteam_ddc_quote_save>
                </observers>
            </sales_quote_save_after>
    	</events>
    	<sales>
			 <quote>
                <totals>
                    <deliveryfee>
                        <class>ecommerceteam_ddc/sales_quote_address_total_deliveryfee</class>
                        <after>shipping</after>
                        <before>grand_total</before>
                    </deliveryfee>
                </totals>
            </quote>
          <order_invoice>
                <totals>
                    <deliveryfee>
                        <class>ecommerceteam_ddc/sales_order_total_invoice_deliveryfee</class>
                    </deliveryfee>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <deliveryfee>
                        <class>ecommerceteam_ddc/sales_order_total_creditmemo_deliveryfee</class>
                    </deliveryfee>
                </totals>
            </order_creditmemo>
           </sales>
           <pdf>
             <totals>
                <deliveryfee translate="title">
                    <title>Rush order</title>
                    <source_field>delivery_fee_amount</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>650</sort_order>
                    <amount_prefix></amount_prefix>
                </deliveryfee>
            </totals>
        </pdf>
	</global>
	<adminhtml>
        <acl>
	        <resources>
	            <admin>
	                <children>
	                    <system>
	                        <children>
	                            <config>
	                                <children>
	                                    <ecommerceteam_ddc/>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
	                </children>
	            </admin>
	        </resources>
	    </acl>
	</adminhtml>
	<frontend>
		<layout>
            <updates>
                <ecommerceteam_ddc module="ecommerceteam_ddc">
                    <file>ecommerceteam-ddc.xml</file>
                </ecommerceteam_ddc>
            </updates>
        </layout>
	</frontend>
	<default>
		<checkout>
			<deliverydatecomment>
				<comment_label>Customer Comment</comment_label>
				<deliverydate_label>Delivery Date</deliverydate_label>
				<disable_week_days>1,7</disable_week_days>
			</deliverydatecomment>
			<deliveryfee>
				<deliveryfee_label>Last Event Day Choies</deliveryfee_label>
				<deliveryfee_select><![CDATA[1|Last Arrive in 12 days|20% off|15 
				2|Last Arrive in 16 days|70% off|12]]></deliveryfee_select>
			</deliveryfee>
		</checkout>
	</default>
</config>