<script>
function _getBaseUrl(){
    var url=document.domain;
    url='//'+url;
    return url;    
}
function clicklikes(obj,id){
	jQuery(obj).children('img').attr('src','<?php echo $this->getSkinUrl('images/fb_like_disabled.png'); ?>');
    var url=_getBaseUrl();
    url+='/ajax/likes.php?po=likes&id='+id;
    var likes=jQuery('#fb_num_'+id).html();
    if(likes!=''){
        likes=parseInt(likes);
        if(!isNaN(likes)){
            likes+=1;
        }
    }else{
        likes=1;
    }
    jQuery.get(url);
    jQuery('#fb_num_'+id).html(likes);
    jQuery(obj).unbind('click');
}
jQuery(function($) {
  $('.fb_like_button').each(function(){
        $(this).click(function(){
             clicklikes($(this),$(this).attr('id'));
        });
  });
  //Colorpic Js
  $('.colorpic-click').on('click',function(){
        var thisImgUrl = $(this).data('imgurl');
        if(thisImgUrl.length > 0){
           var parentPostion =  $(this).parents('.product-colorpic').siblings('a.product-image');
           parentPostion.children('.pro-list').attr('src',thisImgUrl);
           parentPostion.children('.hoverImage').attr('src',thisImgUrl);

           $(this).siblings('.colorpic-click').removeClass('active');
           $(this).addClass('active');
        }
  })  
});
</script>
