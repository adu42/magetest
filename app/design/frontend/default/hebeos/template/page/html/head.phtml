    $actionName=Mage::app()->getRequest()->getActionName();
	$cmsHome = Mage::getSingleton('cms/page')->getIdentifier();
	$routeName = Mage::app()->getFrontController()->getRequest()->getRouteName();
	
    $s = strtolower($moduleName.$controllerName);
    if($s==$type){
        return true;
    }elseif($cmsHome=='home' && $routeName==$type){
		return true;
	}
    return false;
}


