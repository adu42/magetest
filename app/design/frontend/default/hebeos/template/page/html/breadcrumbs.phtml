<?php if($crumbs && is_array($crumbs)): ?>
<div class="breadcrumbs">
    <ul xmlns:v="http://rdf.data-vocabulary.org/#">
        <?php 
        $crumbs_num = count($crumbs);
        $n = 0 ;
        foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
        <?php $n++;
              if($n == $crumbs_num){
                     $_crumbInfo['link'] = 'http://'.$_SERVER['HTTP_HOST'].$_SERVER['REQUEST_URI'] ;
                
              }  
         ?>
            <li class="<?php echo $_crumbName ?>" typeof="v:Breadcrumb">
            <?php if($_crumbInfo['link']): ?>
                <a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->htmlEscape($_crumbInfo['title']) ?>" rel="v:url" property="v:title">
		<span><?php echo $this->htmlEscape($_crumbInfo['label']) ?></span><i></i></a>
            <?php elseif($_crumbInfo['last']): ?>
	   <h1> <a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->htmlEscape($_crumbInfo['title']) ?>" rel="v:url" property="v:title">
               <span rel="v:child" property="v:title">
                      <?php echo $this->htmlEscape($_crumbInfo['label'])?>  </span>
			</a>    </h1>  
            <?php else: ?>
	     <a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->htmlEscape($_crumbInfo['title']) ?>" rel="v:url" property="v:title">
                <span><?php echo $this->htmlEscape($_crumbInfo['label']) ?></span>
		</a>
            <?php endif; ?>
            <?php if(!$_crumbInfo['last']): ?>
            <?php endif; ?>
            </li>
        <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
