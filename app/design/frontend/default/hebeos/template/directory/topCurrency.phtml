/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if ($this->getCurrencyCount() > 1): ?>
<div class="top-currency">
    <div class="block-content">
	<em class="rightline"></em>
        <dl>
			<dt class="currency-select">
                    <?php  
                    echo $this->getCurrentCurrencyCode();
					//echo Mage::app()->getLocale()->currency($this->getCurrentCurrencyCode())->getSymbol();
                    ?>
            </dt>
			<em class="more-icon currency_more"></em>
			<dd class="currency-duo">
                <ul>
                    <?php
                    $i = 0;
                    foreach ($this->getCurrencies() as $_code => $_name):
                        ?>
                        <?php
                        if ($_code == $this->getCurrentCurrencyCode()) {
                            continue;
                        }
                        if ($i == 0) {
                            $cClass = '';
                        } else {
                            $cClass = 'code_Class';
                        }
                        ?>
                        <li><a rel="nofollow" class="rr<?php echo $_code ?> <?php echo $cClass; ?>" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>">
                            
                              
							  <label> <?php  echo Mage::app()->getLocale()->currency($_code)->getSymbol(); ?></label>
                                    <?php echo $_code; ?>
							   
                                <?php //echo $_name ?>
                            
                        </a></li>
                        <?php
                        $i++;
                    endforeach;
                    ?>
				</ul>
				<em class="triangle bord_tri"></em>
                <em class="triangle bg_tri"></em>
			</dd>
        </dl>
    </div>
</div>
<?php endif; ?>
