<?xml version="1.0"?>
<layout version="1.0">
	<checkout_onepage_index>
		<reference name="head">
			<action method="addItem" ifconfig="checkout/deliverydatecomment/enabled_deliverydate"><type>skin_css</type><name>css/ecommerceteam/datepicker.css</name><params/></action>
			<action method="addItem" ifconfig="checkout/deliverydatecomment/enabled_deliverydate"><type>skin_js</type><name>js/ecommerceteam/prototype-date-extensions.js</name></action>
			<action method="addItem" ifconfig="checkout/deliverydatecomment/enabled_deliverydate"><type>skin_js</type><name>js/ecommerceteam/datepicker.js</name></action>
		</reference>
		<reference name="checkout.onepage.shipping_method">
			<action method="unsetChildren" />
			<block type="checkout/onepage_shipping_method_available" name="checkout.onepage.shipping_method.available" as="available" template="ecommerceteam/checkout/onepage/shipping_method/available.phtml"/>
            <block type="ecommerceteam_ddc/shipping_method_additional" name="checkout.onepage.shipping_method.additional" as="additional" template="ecommerceteam/checkout/onepage/shipping_method/additional.phtml"/>
		</reference>
	</checkout_onepage_index>
	<checkout_onepage_additional>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>
		<remove name="root" />
        <block type="ecommerceteam_ddc/shipping_method_additional" name="ddc.root" output="toHtml" template="ecommerceteam/checkout/onepage/shipping_method/additional.phtml">
            <action method="setDontDisplayContainer"><param>1</param></action>
        </block>
    </checkout_onepage_additional>
    <paypal_express_review translate="label">
        <reference name="express.review.shipping.method">
			<action method="unsetChildren" />
            <block type="ecommerceteam_ddc/shipping_method_additional" name="checkout.onepage.shipping_method.additional" as="additional" template="ecommerceteam/checkout/onepage/shipping_method/additional.phtml"/>
        </reference>
    </paypal_express_review>
</layout>
