<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php
if(count($this->getAllStores())>1){
 $_langStr = '';
 // $mtp = '<a href="%s">%s</a>';
 // $hmtp = '<a href="javascript:void(0);">%s</a>';
  $mtp = '<option value="%s">%s</option>';
  $hmtp = '<option value="/" selected="selected">%s</option>'; 
  $shmtp='<select id="langsel" class="text-arrow-bg">%s</select>';
  $url_obj = new Mage_Core_Model_Url();
    
	 
 foreach ($this->getAllStores() as $_lang){
         $name= $this->htmlEscape($_lang->getName());
        // $url = $_lang->getCurrentUrl(false);
		 $url=$url_obj->getBaseUrl(array('_store'=> $_lang->getCode()));
		 $_url = explode('?',$url);
         $url=$_url[0];
         if($_lang->getId() == $this->getCurrentStoreId()){
            $_langStr=vsprintf($hmtp,array($name)).$_langStr;
         }else{
            $_langStr.=vsprintf($mtp,array($url,$name));
         }
  }
  if(stripos($_langStr,'option')!==false){
 	 echo vsprintf($shmtp,array($_langStr));
  }else{
	  echo $_langStr;
  }
}
?>
<script type="text/javascript">
jQuery("#langsel").change(function(){
    window.location.href=jQuery(this).attr("value");
});
</script>

