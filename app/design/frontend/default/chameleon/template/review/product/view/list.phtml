<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
        <h2><?php echo $this->__('Customer Reviews') ?></h2>
        <?php echo $this->getChildHtml('toolbar') ?>
        <dl>
        <?php foreach ($_items as $_review):?>
            <dt>
                <?php
                    $_votes = $_review->getRatingVotes();
                    $_percent=100;
                    if(count($_votes)){
                     $i=0;
                    foreach($_votes as $_vote){
                         $i++;
                        $_percent+=$_vote->getPercent();
                    }
                    $_percent = round($_percent/$i,0);
                    }
                ?>
                <?php if (count($_votes)): ?>
                <table class="ratings-table">
                    <col width="1" />
                    <col />
                    <tbody>
                        <?php //foreach ($_votes as $_vote): ?>
                        <tr>
                           <!-- <th><?php //echo $this->escapeHtml($_vote->getRatingCode()) ?></th> -->
                            <td>
                                <div class="rating-box">
                                    <div class="rating" style="width:<?php echo $_percent; ?>%;"></div>
                                </div>
                            </td>
                        </tr>
                        <?php //endforeach; ?>
                    </tbody>
                </table>
                <?php endif; ?>
                <?php echo $this->htmlEscape($_review->getTitle()) ?> <?php echo $this->__('Review by <span>%s</span>', $this->htmlEscape($_review->getNickname())) ?>
            </dt>
            <dd>
                <?php echo nl2br($this->htmlEscape($_review->getDetail())) ?>
                <small class="date"><?php echo $this->__('(Posted on %s)', $this->formatDate($_review->getCreatedAt()), 'long') ?></small>
					
				 <?php if (Mage::helper("reviewimage")->getActive() == '1'): ?>
				
                        <?php
                        $images = Mage::helper("reviewimage")->getImages($_review); //  $_review->getImages();
					
                        if ($images):
                            ?>
                            <!---!!--->
                  
                              <div >
                                <?php  foreach ($images as $image):  ?>
                                    <a href="<?php echo $image['big']; ?>" target="_blank">
                                    <img class="thumbnail" src="<?php echo $image['thumbnail']; ?>"/> </a> 

                                <?php endforeach; ?>
                            </div>

                        <?php endif; ?>
                    <?php endif; ?>
				
				
            </dd>
        <?php endforeach; ?>
        </dl>
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>
</div>
