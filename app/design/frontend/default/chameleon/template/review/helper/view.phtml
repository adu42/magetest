                         id="review-detail-likes-<?php echo $_review->getReviewId() ?>">
                        <div class="review-likes"  dir="reviews"
                             id="<?php echo $_review->getReviewId() ?>"><?php echo ($_review->getReviewLikes()) ? $_review->getReviewLikes() : 1; ?></div>
