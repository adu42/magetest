                        <?php
                        $images = Mage::helper("reviewimage")->getImages($_review); //  $_review->getImages();
                        if ($images):
                            ?>
                            <!---!!--->
                            <div class="main-image" dir="reviews"></div>
                              <div class="review-thumbnail-images"  dir="reviews"  data-id="<?php echo $_review->getReviewId() ?>">
