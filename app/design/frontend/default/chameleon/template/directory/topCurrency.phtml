?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="top-currency">
    <div class="block-content">
		<div class="curSelector">
			<a class="dropdown-toggle">
				<?php echo $this->getCurrentCurrencyCode()?><span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
			<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
			<li><a title="<?php echo $_code ?>" alt="<?php echo $_code ?>" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>">
				<span class="symbo">
				<?php if($_code=="USD") echo "$";?>
				<?php if($_code=="EUR") echo "€";?>
				<?php if($_code=="GBP") echo "£";?>
				<?php if($_code=="CAD") echo "$";?>
				<?php if($_code=="AUD") echo "$";?>
				<?php if($_code=="CHF") echo "₣";?>
				<?php if($_code=="BRL") echo "R$";?>
				<?php if($_code=="NZD") echo "NZ$";?>
				<?php if($_code=="RUB") echo "p.";?>
				<?php if($_code=="SGD") echo "S$";?>
				<?php if($_code=="ZAR") echo "$";?>				
				<?php if($_code=="HKD") echo "$";?>
				<?php if($_code=="JPY") echo "¥";?>
				<?php if($_code=="CLP") echo "$";?>
				<?php if($_code=="BOK") echo "kr.";?>
				<?php if($_code=="DKK") echo "kr.";?>
				<?php if($_code=="SEK") echo "Kr.";?>
