<?php $_option = $this->getOption(); ?>
<?php
$_isDefaultHide = $this->getDefaultHideClass();
$dtHide = '';
$ddHide = '';
if($_isDefaultHide==2){
    $dtHide = ' class="hidden"';
    $ddHide = ' class="hidden"';
}else if($_isDefaultHide == 1)$ddHide = ' class="hidden"';
if ($_option->decoratedIsLast){
    $ddHide=empty($ddHide)?' class="last"':' class="last hidden"';
}
?>
<dt<?php echo $dtHide; ?>><label<?php if ($_option->getIsRequire()) echo ' class="required"' ?> for="<?php echo strtolower($this->htmlEscape($_option->getTitle())); ?>" as="<?php echo $this->getflagStr($this->htmlEscape($_option->getTitle())); ?>"><?php if ($_option->getIsRequire()){ echo '<em>*</em>'; }else{ echo '&nbsp;';} ?><?php echo  $this->__($this->htmlEscape($_option->getTitle())) ?></label>
    <?php echo $this->getFormatedPrice() ?></dt>
<dd<?php echo $ddHide; ?>>
    <div class="input-box">
    <?php if ($_option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_FIELD): ?>
        <input type="text" onchange="opConfig.reloadPrice()" id="options_<?php echo $_option->getId() ?>_text" class="input-text<?php echo $_option->getIsRequire() ? ' required-entry' : '' ?> <?php echo $_option->getMaxCharacters() ? ' validate-length maximum-length-'.$_option->getMaxCharacters() : '' ?> product-custom-option" name="options[<?php echo $_option->getId() ?>]" placeholder="<?php echo $this->__($this->escapeHtml($_option->getTitle())); ?>" value="<?php echo $this->escapeHtml($this->getDefaultValue()); ?>" />
    <?php elseif ($_option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_AREA): ?>
        <textarea id="options_<?php echo $_option->getId() ?>_text" onchange="opConfig.reloadPrice()" class="<?php echo $_option->getIsRequire() ? ' required-entry' : '' ?> <?php echo $_option->getMaxCharacters() ? ' validate-length maximum-length-'.$_option->getMaxCharacters() : '' ?> product-custom-option" name="options[<?php echo $_option->getId() ?>]" rows="5" cols="25"  placeholder="<?php echo $this->__($this->escapeHtml($_option->getTitle())); ?>"><?php echo $this->escapeHtml($this->getDefaultValue()); ?></textarea>
    <?php endif; ?>
    <?php if ($_option->getMaxCharacters()): ?>
        <p class="note"><?php echo Mage::helper('catalog')->__('Maximum number of characters:')?> <strong><?php echo $_option->getMaxCharacters() ?></strong></p>
    <?php endif; ?>
    </div>
</dd>
