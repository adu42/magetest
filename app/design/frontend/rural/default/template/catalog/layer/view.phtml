/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if ($this->canShowBlock()):

    $selectedFilters = $this->getLayer()->getState()->getFilters();
    $_selected = array();
    if(!empty($selectedFilters)){
        foreach ($selectedFilters as $selectedFilter){
            $_selected[$selectedFilter->getName()][]=$selectedFilter->getLabel();
        }
    }

    ?>
    <div id="layered-nav-marker"></div>
    <div class="block block-layered-nav<?php if (!$this->getLayer()->getState()->getFilters()): ?> block-layered-nav--no-filters<?php endif; ?>">
        <div class="block-content toggle-content">
            <?php if ($this->canShowOptions()): ?>
                <ul id="narrow-by-list">
                    <?php $_filters = $this->getFilters() ?>
                    <?php foreach ($_filters as $_filter): ?>
                        <?php if ($_filter->getItemsCount()):
                            $class='';$selected='';$selectedFilters = array();
                            if(isset($_selected[$_filter->getName()])){
                                $class=' class="on"';
                                $selected = array_pop($_selected[$_filter->getName()]);
                                $selectedFilters = $_selected[$_filter->getName()];
                            }else{
                                $selected = $_filter->getName();
                            }
                            ?>
                            <li<?php echo $class; ?>>
                                <div class="filter-title"><?php echo $this->__($selected); ?><span class="caret"></span>
                                    <div class="filter-body"><?php echo $_filter->setSelectedFilters($selectedFilters)->getHtml(); ?></div>
                                </div>
                            </li>
                        <?php endif; ?>
                    <?php endforeach; ?>
                    <li><div class="filter-title"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('RESET') ?></a></div></li>
                </ul>
            <?php endif; ?>
        </div>
    </div>
<?php endif; ?>
